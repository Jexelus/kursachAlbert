<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.GridPane?>
<?import impl.org.controlsfx.skin.GridRow?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.kursachalbert.kursachalbert.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button fx:id="baseDelete" text="Удалить базу данных : " visible="false" onAction="#deleteDatabase"/>

    <GridPane fx:id="root" gridLinesVisible="true">

    </GridPane>

    <Label fx:id="ConnectHeader" text="Enter Data base name"/>
    <TextField fx:id="DataBaseName" promptText="Рестораны"/>
    <Button fx:id="connect" text="Подключиться" onAction="#CreateBase"/>
    <TextField fx:id="IDField" promptText="ID в системе" visible="false"/>
    <TextField fx:id="nameField" promptText="Имя ресторана" visible="false"/>
    <TextField fx:id="menuField" promptText="Позиция из меню" visible="false"/>
    <TextField fx:id="barField" promptText="Позиция из бара" visible="false"/>
    <TextField fx:id="checkField" promptText="Чек" visible="false"/>
    <Button fx:id="addRow" text="Добавить запись" onAction="#addRow" visible="false"/>
    <Button fx:id="update" text="Обновить" onAction="#Update" visible="false"/>

</VBox>
